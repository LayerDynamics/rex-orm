{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "test:coverage": "deno test --coverage=coverage --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "docs": "deno run --allow-read --allow-write --allow-run --allow-env scripts/generate_docs.ts",
    "docs:serve": "cd docs/site && python3 -m http.server 8000",
    "version:patch": "deno run --allow-read --allow-write --allow-env scripts/bump_version.ts patch",
    "version:minor": "deno run --allow-read --allow-write --allow-env scripts/bump_version.ts minor",
    "version:major": "deno run --allow-read --allow-write --allow-env scripts/bump_version.ts major"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "reflect-metadata": "npm:reflect-metadata@0.1.14",
    "ws": "npm:ws@^8.18.0",
    "https://deno.land/std@0.196.0/console/": "https://deno.land/std@0.224.0/console/"
  }
}
